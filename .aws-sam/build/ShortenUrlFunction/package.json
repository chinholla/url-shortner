{
    "name": "url-shortner",
    "version": "0.0.1",
    "type": "module",
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.398.0",
        "@aws-sdk/lib-dynamodb": "^3.398.0",
        "short-unique-id": "^5.2.2"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.149",
        "@types/jest": "^29.5.14",
        "aws-sdk": "^2.1692.0",
        "aws-sdk-client-mock": "^2.2.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.3.2",
        "typescript": "^5.8.3"
    },
    "scripts": {
        "build": "tsc",
        "test": "jest"
    },
    "jest": {
        "testMatch": [
            "**/__tests__/**/*.[jt]s?(x)",
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/__tests__/**/*.mjs?(x)",
            "**/?(*.)+(spec|test).mjs?(x)"
        ],
        "moduleFileExtensions": [
            "mjs",
            "js"
        ],
        "preset": "ts-jest",
        "collectCoverage": true,
        "collectCoverageFrom": ["src/**/*.ts"],
         "coverageThreshold": {
            "global": {
                "branches": 95,
                "functions": 95,
                "lines": 95,
                "statements": 95
            }
        }
    }
}
